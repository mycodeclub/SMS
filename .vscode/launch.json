    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch .NET Core",
            "type": "dotnet",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SchoolManagement/bin/Debug/net9.0/SchoolManagement.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SchoolManagement",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "http://127.0.0.1:5294"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://127.0.0.1:5294"
            }
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach"
        }
    ]
}
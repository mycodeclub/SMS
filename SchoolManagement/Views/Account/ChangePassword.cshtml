@model SchoolManagement.Models.UpdatePassword
@{
    ViewData["Title"] = "ChangePassword";
    Layout = ViewBag.Layout;
    ViewBag.ActiveTabName = "ChangePassword";
}

<div class="content">
    <div class="row m-t-3">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header bg-blue">
                    <h5 class="m-b-0">Change Password</h5>
                </div>
                <div class="card-body">
                    <form asp-controller="Account" asp-action="ChangePassword" method="post" class="form-horizontal form-bordered">
                        <div class="form-body">
                            <div class="form-group row">
                                <label class="control-label text-right col-md-2" asp-for="NewEmail">Email</label>
                                <div class="col-md-10">
                                    <input asp-for="NewEmail" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="control-label text-right col-md-2" asp-for="OldPassword">Old Password</label>
                                <div class="col-md-10">
                                    <input asp-for="OldPassword" class="form-control" />
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="control-label text-right col-md-2" asp-for="NewPassword">New Password</label>

                                <div class="col-md-10">
                                    <input asp-for="NewPassword" class="form-control" />
                                </div>
                            </div>

                        </div>
                        <div class="form-actions">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="row">
                                        <div class="col-sm-3 col-md-9">
                                            <button type="Submit" class="btn btn-primary btn-sm">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


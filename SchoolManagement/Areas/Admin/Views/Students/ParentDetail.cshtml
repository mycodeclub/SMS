@model SchoolManagement.Models.User.ParentOrGuardians

@{
    ViewData["Title"] = "Parent Detail";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "Students";
}

<div class="container py-4">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white text-center rounded-top-4">
            <h4 class="mb-0"><i class="bi bi-person-vcard-fill me-2"></i> Parent Profile</h4>
        </div>

        <div class="card-body px-4">
            <div class="row g-4">

                <!-- Profile Image -->
                <div class="col-md-3 text-center">
                    <h6 class="text-success">Parent Photo</h6>
                    @if (!string.IsNullOrEmpty(Model.PhotosFileUrl))
                    {
                        var photoPath = Url.Content("~/" + Model.PhotosFileUrl.TrimStart('/'));
                        <img src="@photoPath" class="img-thumbnail rounded-circle mt-2" style="width: 100px; height: 100px; object-fit: cover;" />
                        <div class="mt-2">
                            <a href="@photoPath" target="_blank" class="btn btn-sm btn-outline-primary">View Photo</a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mt-2">No photo available.</p>
                    }
                </div>

                <!-- Aadhaar Image -->
                <div class="col-md-3 text-center">
                    <h6 class="text-warning">Aadhaar</h6>
                    @if (!string.IsNullOrEmpty(Model.AadharFileUrl))
                    {
                        var aadhaarPath = Url.Content("~/" + Model.AadharFileUrl.TrimStart('/'));
                        <img src="@aadhaarPath" class="img-thumbnail mt-2" style="max-height: 100px;" />
                        <div class="mt-2">
                            <a href="@aadhaarPath" target="_blank" class="btn btn-sm btn-outline-primary">View Aadhaar</a>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted mt-2">No Aadhaar uploaded.</p>
                    }
                </div>

                <!-- Parent Info -->
                <div class="col-md-6">
                    <h5 class="text-primary mb-3"><i class="bi bi-info-circle me-1"></i> Parent Information</h5>
                    <dl class="row fs-6">
                        <dt class="col-sm-5">Relation</dt>
                        <dd class="col-sm-7">@Model.Relation?.RelationName</dd>

                        <dt class="col-sm-5">Full Name</dt>
                        <dd class="col-sm-7">@Model.FullName</dd>

                        <dt class="col-sm-5">DOB</dt>
                        <dd class="col-sm-7">@Model.DOB.ToString("dd-MM-yyyy")</dd>

                        <dt class="col-sm-5">Primary Phone</dt>
                        <dd class="col-sm-7">@Model.PrimaryPhoneNumber</dd>

                        <dt class="col-sm-5">Secondary Phone</dt>
                        <dd class="col-sm-7">@Model.SecondryPhoneNumber</dd>

                        <dt class="col-sm-5">Aadhaar Number</dt>
                        <dd class="col-sm-7">@Model.AadhaarNumber</dd>

                        <dt class="col-sm-5">Occupation</dt>
                        <dd class="col-sm-7">@Model.Occupation</dd>

                        <dt class="col-sm-5">CTC</dt>
                        <dd class="col-sm-7">@Model.CTC</dd>

                        <dt class="col-sm-5">Full Address</dt>
                        <dd class="col-sm-7">@Model.FullAddress</dd>
                    </dl>
                </div>
            </div>

            <div class="mt-4 text-end">
               
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

@model IEnumerable<SchoolManagement.Models.User.Student>

@{
    ViewData["Title"] = "Student List";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "Students";
}

<!-- required externals -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<!-- internal CSS -->
<style>
    .card {
        border-radius: .75rem;
    }

    .container-fluid {
        padding-left: 1rem;
        padding-right: 1rem;
    }

    /* Top controls: centered dropdown + right-aligned new admission */
    .top-controls {
        position: relative;
        padding: 0.5rem 0;
        margin-bottom: 1.5rem; /* gap before table/search */
    }

    .center-filter {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        max-width: 400px;
    }

    .new-admission-wrapper {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
    }

    /* Search separation: give DataTables filter some top margin */
    .dataTables_wrapper .dataTables_filter {
        margin-top: 0.75rem;
    }

        .dataTables_wrapper .dataTables_filter input {
            margin-bottom: 0.25rem;
        }

    @@media (max-width: 768px) {
        .center-filter

    {
        position: static;
        transform: none;
        width: 100%;
        margin-bottom: .75rem;
    }

    .new-admission-wrapper {
        position: static;
        transform: none;
        text-align: right;
        margin-top: .25rem;
    }

    }

    .btn-sm {
        padding: .25rem .5rem;
        font-size: .75rem;
    }

    table#tblStudents tbody tr td {
        vertical-align: middle;
    }
</style>

<div class="container-fluid my-3">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <h6 class="mb-0"><i class="fa fa-book mr-2"></i>All Students</h6>
            <div class="ml-auto">
                <a asp-action="Create" class="btn btn-sm btn-success">
                    <i class="fa fa-plus-circle mr-1"></i> New Student
                </a>
            </div>
        </div>

        <div class="card-body">
            <!-- filter dropdown centered + new admission right -->
            <div class="top-controls">
                <div class="center-filter">
                    <select id="StandardIdDDL" class="form-select" asp-items="ViewBag.StandardId" onchange="ReloadIndex()">
                        <option value="0">-- All Standards --</option>
                    </select>
                </div>
              
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered align-middle" id="tblStudents" style="width:100%;">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().FullName)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().DOB)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().Gender)</th>
                            <th>@Html.DisplayNameFor(m => m.FirstOrDefault().AdmitionDate)</th>
                            <th>Parent(s)</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row-@item.UniqueId">
                                <td>@Html.DisplayFor(_ => item.FullName)</td>
                                <td>@item.DOB.ToString("dd-MM-yyyy")</td>
                                <td>@Html.DisplayFor(_ => item.Gender)</td>
                                <td>@item.AdmitionDate.ToString("dd-MM-yyyy")</td>
                                <td>@(item.ParentOrGuardians?.Count() ?? 0)</td>
                                <td class="text-right">
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a asp-action="Create" asp-route-id="@item.UniqueId" class="btn btn-sm" title="Edit">
                                            <i class="fa fa-edit text-primary"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UniqueId" class="btn btn-sm" title="Details">
                                            <i class="fa fa-eye text-info"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm delete-student" data-id="@item.UniqueId" title="Delete">
                                            <i class="fa fa-trash text-danger"></i>
                                        </button>
                                        <a asp-controller="FeeAssignment" asp-action="ManageFees" asp-route-studentId="@item.UniqueId" class="btn btn-sm" title="Manage Fees">
                                            <i class="fa fa-rupee-sign text-success"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border border-primary">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this student record?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteStudentId" />
                    <button type="submit" class="btn btn-danger">Yes, Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        function ReloadIndex() {
            const standardId = $('#StandardIdDDL').val() || 0;
            window.location.href = '/Admin/Students/Index/' + standardId;
        }

        $(document).ready(function () {
            $('#tblStudents').DataTable({
                pageLength: 10,
                ordering: true,
                searching: true,
                order: [[0, "asc"]],
                columnDefs: [{ orderable: false, targets: -1 }],
                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search students..."
                }
            });

            $('#tblStudents').on('click', '.delete-student', function (e) {
                e.preventDefault();
                const deleteId = $(this).data('id');
                $('#deleteStudentId').val(deleteId);
                $('#deleteModal').modal('show');
            });

            $('#deleteForm').on('submit', function (e) {
                e.preventDefault();
                const id = $('#deleteStudentId').val();
                const token = $(this).find('input[name="__RequestVerificationToken"]').val();

                $.ajax({
                    url: '/Admin/Students/Delete',
                    method: 'POST',
                    data: { id: id, __RequestVerificationToken: token },
                    success: function (result) {
                        if (result?.success) {
                            $('#deleteModal').modal('hide');
                            $('#row-' + id).fadeOut(200, function () { $(this).remove(); });
                        } else {
                            alert('Delete failed: ' + (result?.error || 'Unknown error'));
                        }
                    },
                    error: function () {
                        alert('Delete failed due to server error.');
                    }
                });
            });
        });
    </script>
}

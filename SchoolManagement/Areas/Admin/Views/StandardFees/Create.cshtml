@model SchoolManagement.Models.Fee.StandardFee

@{
    ViewData["Title"] = Model.UniqueId > 0 ? "Edit Standard Fee" : "Create Standard Fee";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "StandardFees";
    var isEdit = Model.UniqueId > 0;
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<div class="row mt-4">
    <div class="col-12">
        <div class="card shadow rounded-3">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="fas @(isEdit ? "fa-edit" : "fa-plus-circle") me-2"></i>
                    @(isEdit ? "Edit Standard Fee" : "Create Standard Fee")
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.UniqueId)

                    <div class="form-group mb-3">
                        <label asp-for="FeeTypeId" class="control-label fw-bold"></label>
                        <select asp-for="FeeTypeId" asp-items="ViewBag.FeeTypeId" class="form-control">
                            <option value="">-- Select Fee Type --</option>
                        </select>
                      
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="StandardId" class="control-label fw-bold"></label>
                        <select asp-for="StandardId" asp-items="ViewBag.StandardId" class="form-control">
                            <option value="">-- Select Standard --</option>
                        </select>

                    </div>

                    <div class="mb-3">
                        <label asp-for="Amount" class="form-label fw-bold"></label>
                        <input asp-for="Amount" class="form-control" placeholder="Enter Amount" />
                       
                    </div>

                    <div class="mb-4">
                        <label asp-for="DueDate" class="form-label fw-bold"></label>
                        <input asp-for="DueDate" class="form-control" type="date" />
                   
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-1"></i> @(isEdit ? "Update" : "Create")
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

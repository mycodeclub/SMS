@model IEnumerable<SchoolManagement.Models.Fee.StandardFee>

@{
    ViewData["Title"] = "Standard Fee List";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "StandardFees";
}

<!-- external styles -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    /* Compact page padding */
    .content, .container-fluid {
        padding: 0.5rem !important;
    }

    .card {
        border-radius: .5rem;
        margin-bottom: 0.75rem;
    }

    .card-header {
        padding: .5rem .75rem !important;
    }

    .card-body {
        padding: .5rem .75rem !important;
    }

    /* Add Button Row */
    .top-controls {
        display: flex;
        justify-content: flex-end;
        margin-bottom: .5rem;
    }

    .btn-sm {
        padding: .2rem .5rem !important;
        font-size: .8rem !important;
    }

    /* Table compactness */
    #tblStandardFeeList th,
    #tblStandardFeeList td {
        padding: 6px 10px !important;
        font-size: .85rem !important;
        vertical-align: middle !important;
        white-space: nowrap;
    }

        /* Column alignment */
        #tblStandardFeeList th:nth-child(1),
        #tblStandardFeeList td:nth-child(1),
        #tblStandardFeeList th:nth-child(2),
        #tblStandardFeeList td:nth-child(2) {
            text-align: left;
        }

        #tblStandardFeeList th:nth-child(3),
        #tblStandardFeeList td:nth-child(3),
        #tblStandardFeeList th:nth-child(4),
        #tblStandardFeeList td:nth-child(4) {
            text-align: right;
        }

    /* DataTables compact */
    .dataTables_wrapper .dataTables_filter,
    .dataTables_wrapper .dataTables_paginate,
    .dataTables_wrapper .dataTables_info,
    .dataTables_wrapper .dataTables_length {
        margin: .25rem 0 !important;
        font-size: .8rem !important;
    }

        .dataTables_wrapper .dataTables_filter input {
            height: 1.8rem !important;
            font-size: .8rem !important;
            padding: .2rem .4rem !important;
        }
</style>

<div class="container-fluid my-3">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <h6 class="mb-0"><i class="fa fa-book mr-2"></i> Standards Fee</h6>
            <div class="ml-auto">
                <a asp-action="Create" class="btn btn-sm btn-success">
                    <i class="fa fa-plus-circle mr-1"></i> Add Fee
                </a>
            </div>
        </div>
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered" id="tblStandardFeeList" style="width:100%;">
                    <thead class="table-light">
                        <tr>
                            <th>Fee Type</th>
                            <th>Standard</th>
                            <th>Amount</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row-@item.UniqueId">
                                <td>@item.FeeType.Name</td>
                                <td>@item.Standard.StandardName</td>
                                <td>@item.Amount.ToString("C")</td>
                                <td class="text-right">
                                    <div class="btn-group">
                                        <a asp-action="Create" asp-route-id="@item.UniqueId" class="btn btn-sm" title="Edit">
                                            <i class="fa fa-edit text-primary"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UniqueId" class="btn btn-sm" title="Details">
                                            <i class="fa fa-eye text-success"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm delete-standardfee" data-id="@item.UniqueId" title="Delete">
                                            <i class="fa fa-trash text-danger"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border border-primary">
            <div class="modal-header">
                <h6 class="modal-title" id="deleteModalLabel">Confirm Delete</h6>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Standard Fee?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-sm" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger btn-sm" id="confirmDeleteBtn">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let deleteId = null;

        $(document).ready(function () {
            $('#tblStandardFeeList').DataTable({
                pageLength: 10,
                ordering: true,
                searching: true,
                order: [[0, "asc"]],
                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search standard fees..."
                },
                columnDefs: [
                    { orderable: false, targets: -1 }
                ]
            });

            $('#tblStandardFeeList').on('click', '.delete-standardfee', function (e) {
                e.preventDefault();
                deleteId = $(this).data('id');
                $('#deleteModal').modal('show');
            });

            $('#confirmDeleteBtn').on('click', function () {
                if (!deleteId) return;
                $.ajax({
                    url: '/Admin/StandardFees/Delete',
                    type: 'POST',
                    data: { id: deleteId },
                    success: function (result) {
                        if (result?.success) {
                            $('#deleteModal').modal('hide');
                            $('#row-' + deleteId).fadeOut(300, function () { $(this).remove(); });
                        } else {
                            alert('Delete failed: ' + (result?.error || 'Unknown error'));
                        }
                    },
                    error: function () {
                        alert('Delete failed due to server error.');
                    }
                });
            });
        });
    </script>
}

@model IEnumerable<SchoolManagement.Models.Fee.SessionFeeMaster>
@{
    ViewData["Title"] = "Session Fee Master";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<link href="~/uitemplate/admintemp/dist/plugins/datatables/css/datatables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<div class="content px-3">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="fa-solid fa-money-bill-wave me-2"></i>Session Fee Master</h4>
            <a asp-action="Create" class="btn btn-light btn-sm shadow-sm">
                <i class="fa fa-plus me-1"></i> Add Fees By Standard
            </a>
        </div>

        <div class="card-body">
            <table class="table table-hover table-striped border shadow-sm rounded" id="tblFeeList">
                <thead class="table-light text-center">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().AdmissionFee)</th>
                        <th>@Html.DisplayNameFor(model => model.First().TuitionFee)</th>
                        <th>@Html.DisplayNameFor(model => model.First().AnnualCharges)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ActivityFee)</th>
                        <th>@Html.DisplayNameFor(model => model.First().TransportFee)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ExaminationFee)</th>
                        <th>@Html.DisplayNameFor(model => model.First().SportsFee)</th>
                        <th>@Html.DisplayNameFor(model => model.First().ComputerFee)</th>
                        <th>@Html.DisplayNameFor(model => model.First().MiscellaneousFee)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="text-center">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.AdmissionFee</td>
                            <td>@item.TuitionFee</td>
                            <td>@item.AnnualCharges</td>
                            <td>@item.ActivityFee</td>
                            <td>@item.TransportFee</td>
                            <td>@item.ExaminationFee</td>
                            <td>@item.SportsFee</td>
                            <td>@item.ComputerFee</td>
                            <td>@item.MiscellaneousFee</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.UniqueId" class="btn btn-sm btn-warning">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.UniqueId" class="btn btn-sm btn-info">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.UniqueId" class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/admintemp/dist/plugins/datatables/jquery.datatables.min.js"></script>
    <script src="~/admintemp/dist/plugins/datatables/datatables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tblFeeList').DataTable({
                "pageLength": 10,
                "ordering": true,
                "searching": true,
                "order": [[0, "asc"]] // Sort by AdmissionFee (first column)
            });
        });
    </script>
}

@model SchoolManagement.Models.Standard

@{
    ViewData["Title"] = "Create Standard";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "Standard";
}

<div class="content py-4">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Create New Standard</h4>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="SessionYearId" class="form-label fw-bold">Session Year</label>
                    <select asp-for="SessionYearId" class="form-select" asp-items="ViewBag.SessionYearId">
                        <option value="">-- Select Session Year --</option>
                    </select>
                    <span asp-validation-for="SessionYearId" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="StandardName" class="form-label fw-bold">Standard Name</label>
                    <input asp-for="StandardName" class="form-control" placeholder="Enter Standard Name" />
                    <span asp-validation-for="StandardName" class="text-danger"></span>
                </div>


                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success px-4">
                        <i class="bi bi-save"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@model SchoolManagement.Models.Standard

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "Standard";
}

<div class="container-fluid px-0">
    <!-- Header Section -->
    <div class="bg-primary text-white py-4 px-5 mb-4">
        <h2 class="mb-0">Delete Standard</h2>
        <p class="mb-0">Are you sure you want to delete this standard?</p>
    </div>

    <!-- Content Section -->
    <div class="container">
        <div class="card shadow-sm border-0">
            <div class="card-body">
                <h4 class="text-primary mb-4">Standard Details</h4>
                <dl class="row">
                    <dt class="col-sm-3 fw-bold text-secondary">
                        @Html.DisplayNameFor(model => model.StandardName)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.StandardName)
                    </dd>

                    <dt class="col-sm-3 fw-bold text-secondary">
                        @Html.DisplayNameFor(model => model.SessionYear)
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.SessionYear.UniqueId)
                    </dd>
                </dl>

                <form asp-action="Delete">
                    <input type="hidden" asp-for="UniqueId" />
                    <div class="d-flex">
                        <button type="submit" class="btn btn-danger me-3">
                            <i class="bi bi-trash"></i> Delete
                        </button>
                        <a asp-action="Index" class="btn btn-outline-primary">
                            <i class="bi bi-arrow-left"></i> Back to List
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

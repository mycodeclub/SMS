@using Newtonsoft.Json
@model IEnumerable<SchoolManagement.Models.SessionYear>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "SessionYear";

    SchoolManagement.Models.SessionYear selectedSession = null;
    if (TempData.Peek("SelectedSession") is string json)
    {
        selectedSession = JsonConvert.DeserializeObject<SchoolManagement.Models.SessionYear>(json);
    }
}

<!-- Styles -->
<link href="~/uitemplate/admintemp/dist/plugins/datatables/css/datatables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<style>
    .checkbox-container.active-row {
        background-color: #d4edda !important;
    }
</style>

<div class="content px-3">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0">Session of Standard - <span class="text-warning"></span></h4>
          
        </div>

        <!-- Add Staff Button Below Header -->
        <div class="px-3 py-2 bg-light border-bottom d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-primary btn-sm shadow">
                <i class="fa fa-plus me-1"></i> New Session
            </a>
        </div>
        <div class="d-flex justify-content-center my-2">
            <div class="d-flex align-items-center p-4 rounded w-50 justify-content-center">
                <label for="selectedSessionDDL" class="me-3 mb-0 fw-bold text-dark">Change Session Year:</label>
                <select id="selectedSessionDDL" onchange="ReloadIndex()" class="form-control w-50" asp-items="ViewBag.StandardId" > 
                    @foreach (var item in Model)
                    {
                        if (selectedSession.UniqueId == item.UniqueId)
                        {
                            <option selected="selected" value="@item.UniqueId">@item.SessionName</option>
                        }
                        else
                        {
                            <option value="@item.UniqueId">@item.SessionName</option>

                        }
                    }
                
                </select>
            </div>
        </div>

        <div class="card-body">
            <table class="table table-hover table-striped border shadow-sm rounded" id="tblGuestLists">
                <thead class="table-light">
                    <tr>
                        <th>Session Name</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Is Active</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        var rowClass = item.IsAcitve ? "active-row" : "";
                        <tr class="checkbox-container @rowClass" data-id="@item.UniqueId" id="row-@item.UniqueId">
                            <td>@item.SessionName</td>
                            <td>@item.StartDate.ToShortDateString()</td>
                            <td>@item.EndDate.ToShortDateString()</td>
                            <td>
                                <input type="radio"
                                       class="session-checkbox"
                                       data-id="@item.UniqueId"
                                       @(item.IsAcitve ? "checked" : "")
                                       onclick="onCheckboxClick(this)" />
                            </td>
                            <td>
                                <a asp-action="Create" asp-route-id="@item.UniqueId"><i class="fa fa-edit"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.UniqueId"><i class="fa fa-eye"></i></a> |
                                <a href="javascript:void(0);" class="delete-session" data-id="@item.UniqueId">
                                    <i class="fa fa-trash text-danger"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border border-primary">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Session Year?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmDeleteBtn">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let deleteId = null;

        $(document).ready(function () {
            $('#tblGuestLists').DataTable({
                pageLength: 10,
                ordering: true,
                searching: true,
                order: [[0, "desc"]]
            });

            $('.delete-session').on('click', function () {
                deleteId = $(this).data('id');
                $('#deleteModal').modal('show');
            });

            $('#confirmDeleteBtn').on('click', function () {
                if (deleteId) {
                    $.ajax({
                        url: '/Admin/SessionYears/DeleteConfirmed',
                        type: 'POST',
                        data: { id: deleteId },
                        success: function (result) {
                            if (result.success) {
                                $('#deleteModal').modal('hide');
                                $('#row-' + deleteId).fadeOut(500, function () {
                                    $(this).remove();
                                });
                            } else {
                                alert('Delete failed: ' + (result.error || 'Unknown error'));
                            }
                        },
                        error: function () {
                            alert('Delete failed due to server error.');
                        }
                    });
                }
            });
        });

        function onCheckboxClick(checkbox) {
            const selectedId = $(checkbox).data('id');
            $('.session-checkbox').not(checkbox).prop('checked', false);
            $('#selectedSessionDDL').val(selectedId);
            updateSession(selectedId);
        }

        function onDropdownChange() {
            const selectedId = $('#selectedSessionDDL').val();

            $('.session-checkbox').each(function () {
                const isMatch = $(this).data('id') == selectedId;
                $(this).prop('checked', isMatch);
            });

            $('.checkbox-container').removeClass('active-row');
            $('#row-' + selectedId).addClass('active-row');

            updateSession(selectedId);
        }

        function updateSession(sessionId) {
            $.ajax({
                url: '/Admin/SessionYears/SetActiveSession',
                type: 'POST',
                data: { id: sessionId },
                success: function (result) {
                    if (result === true) {
                        location.reload();
                    }
                },
                error: function () {
                    alert('Failed to update session.');
                }
            });
        }
    </script>
}

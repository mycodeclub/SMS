@model IEnumerable<SchoolManagement.Models.SessionYear>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "SessionYear";
}

<!-- externals -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<!-- internal CSS -->
<style>
    .card {
        border-radius: .75rem;
    }

    .container-fluid, .content {
        padding-left: 1rem;
        padding-right: 1rem;
    }

    .top-controls {
        position: relative;
        padding: 0.5rem 0;
        margin-bottom: 1.5rem;
        display: flex;
        align-items: center;
    }

    .new-session-wrapper {
        margin-left: auto;
    }

    .btn-sm {
        padding: .25rem .5rem;
        font-size: .75rem;
    }

    table#tblGuestLists tbody tr td {
        vertical-align: middle;
    }

    .dataTables_wrapper .dataTables_filter {
        margin-top: 0.75rem;
    }

        .dataTables_wrapper .dataTables_filter input {
            margin-bottom: 0.25rem;
        }

    @@media (max-width: 768px) {
        .top-controls

    {
        flex-direction: column;
        align-items: stretch;
        gap: .5rem;
    }

    .new-session-wrapper {
        margin-left: 0;
        text-align: right;
    }

    }
</style>

<div class="content my-3">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h5 class="mb-0">Session of Standard</h5>
        </div>

        <div class="card-body">
            <!-- top controls: add new session right -->
            <div class="top-controls">
                <div class="new-session-wrapper">
                    <a asp-action="Create" class="btn btn-sm btn-outline-primary">
                        <i class="fa fa-plus me-1"></i> Add New Session
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered align-middle" id="tblGuestLists" style="width:100%;">
                    <thead class="table-light">
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.First().SessionName)</th>
                            <th>@Html.DisplayNameFor(model => model.First().StartDate)</th>
                            <th>@Html.DisplayNameFor(model => model.First().EndDate)</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row-@item.UniqueId">
                                <td>@item.SessionName</td>
                                <td>@item.StartDate.ToString("dd-MM-yyyy")</td>
                                <td>@item.EndDate.ToString("dd-MM-yyyy")</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a asp-action="Create" asp-route-id="@item.UniqueId" class="btn btn-sm" title="Edit">
                                            <i class="fa fa-edit text-primary"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UniqueId" class="btn btn-sm" title="Details">
                                            <i class="fa fa-eye text-info"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm delete-session" data-id="@item.UniqueId" title="Delete">
                                            <i class="fa fa-trash text-danger"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal (for sessions) -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border border-primary">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this session?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let deleteId = null;

        $(document).ready(function () {
            $('#tblGuestLists').DataTable({
                pageLength: 10,
                ordering: true,
                searching: true,
                order: [[0, "desc"]],
                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search sessions..."
                },
                columnDefs: [
                    { orderable: false, targets: -1 }
                ]
            });

            $('#tblGuestLists').on('click', '.delete-session', function () {
                deleteId = $(this).data('id');
                $('#deleteModal').modal('show');
            });

            $('#confirmDeleteBtn').on('click', function () {
                if (!deleteId) return;
                $.ajax({
                    url: '/Admin/SessionYear/Delete',
                    type: 'POST',
                    data: { id: deleteId },
                    success: function (result) {
                        if (result?.success) {
                            $('#deleteModal').modal('hide');
                            $('#row-' + deleteId).fadeOut(300, function () { $(this).remove(); });
                        } else {
                            alert('Delete failed: ' + (result?.error || 'Unknown error'));
                        }
                    },
                    error: function () {
                        alert('Delete failed due to server error.');
                    }
                });
            });
        });
    </script>
}

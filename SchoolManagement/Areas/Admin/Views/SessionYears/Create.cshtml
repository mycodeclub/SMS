@model SchoolManagement.Models.SessionYear

@{
    ViewData["Title"] = "Create Session Year";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "SessionYear";
}

<div class="content">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Create New Session Year    </h4>
        </div>
            <hr />

            <form asp-action="Create">
                @* Hidden fields *@
                <input asp-for="UniqueId" type="hidden" />
                <input asp-for="CreatedDate" type="hidden" />
                <input asp-for="UpdatedDate" type="hidden" />

                @* Validation summary *@
                <div asp-validation-summary="ModelOnly" class="alert alert-danger d-none" role="alert"></div>

                <div class="row g-3">
                    <div class="col-md-6 col-lg-4">
                        <label asp-for="StartDate" class="form-label">Start Date</label>
                        <input asp-for="StartDate" type="date" class="form-control" />
                        <span asp-validation-for="StartDate" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 col-lg-4">
                        <label asp-for="EndDate" class="form-label">End Date</label>
                        <input asp-for="EndDate" type="date" class="form-control" />
                        <span asp-validation-for="EndDate" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 col-lg-4">
                        <label asp-for="SessionName" class="form-label">Session Name</label>
                        <input asp-for="SessionName" class="form-control" placeholder="e.g., 2024-2025" />
                        <span asp-validation-for="SessionName" class="text-danger small"></span>
                    </div>

                    <div class="col-md-6 col-lg-4 d-flex align-items-center">
                        <div class="form-check mt-4">
                            <input class="form-check-input" type="checkbox" asp-for="IsAcitve" id="IsAcitve" />
                            <label class="form-check-label ms-2" asp-for="IsAcitve">Active</label>
                        </div>
                        <span asp-validation-for="IsAcitve" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-check-circle"></i> Create Session
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

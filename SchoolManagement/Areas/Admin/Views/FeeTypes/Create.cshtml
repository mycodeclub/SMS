@model SchoolManagement.Models.Fee.FeeType

@{
    ViewData["Title"] = "Create Fee Type";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "FeeTypes";
}

<div class="content">
    <div class="card">
        <div class="card-body">
            <div class="content">
                <div class="card shadow-sm">
                    <div class="card-body" style="border: 1px solid #0d6efd;">
                        <h5 class="card-header  text-black mb-3">Create Fee Type</h5>
                        <hr />
                        <form asp-action="Create" class="needs-validation" novalidate>
                            <div class="row">
                                <div class="form-group col-md-6">
                                    <label asp-for="Name" class="form-label">Fee Type Name</label>
                                    <input asp-for="Name" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>


                                <div class="form-group col-md-6 mt-3">
                                    <label asp-for="Frequency" class="form-label">Frequency</label>
                                    <input asp-for="Frequency" class="form-control" />
                                    <span asp-validation-for="Frequency" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-6 mt-2">
                                    <div class="form-check mt-4">
                                        <input class="form-check-input" asp-for="IsRecurring" />
                                        <label class="form-check-label" asp-for="IsRecurring">Is Recurring?</label>
                                    </div>
                                </div>
                                <div class="form-group col-md-6 mt-3">
                                    <div class="form-check mt-4">
                                        <input class="form-check-input" asp-for="IsOptional" />
                                        <label class="form-check-label" asp-for="IsOptional">Is Optional?</label>
                                    </div>
                                </div>


                                <div class="form-group col-md-6 mt-3">
                                    <label asp-for="DueDate" class="form-label">Due Date</label>
                                    <input asp-for="DueDate" class="form-control" />
                                    <span asp-validation-for="DueDate" class="text-danger"></span>
                                </div>


                                <div class="form-group col-md-6 mt-3">
                                    <label for="ApplicableFromMonth" class="form-label">Applicable From Month</label>
                                    <select id="ApplicableFromMonth" name="ApplicableFromMonth" class="form-control">
                                        <option value="">-- Select Month --</option>
                                        <option value="4">April</option>
                                        <option value="5">May</option>
                                        <option value="6">June</option>
                                        <option value="7">July</option>
                                        <option value="8">August</option>
                                        <option value="9">September</option>
                                        <option value="10">October</option>
                                        <option value="11">November</option>
                                        <option value="12">Decemeber</option>
                                        <option value="1">January</option>
                                        <option value="2">Feburary</option>
                                        <option value="3">March</option>

                                        <!-- Add more months if needed -->
                                    </select>
                                    <span asp-validation-for="ApplicableFromMonth" class="text-danger"></span>
                                </div>

                            </div>

                            <div class="form-group mt-4 text-center">
                                <input type="submit" value="Create" class="btn btn-primary px-5" />
                            </div>
                        </form>

                        <div class="mt-3 text-center">
                            <a asp-action="Index" class="btn btn-link">← Back to List</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

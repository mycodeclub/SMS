@model SchoolManagement.Models.Fee.FeeType

@{
    ViewData["Title"] = "Fee Type Details";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "FeeType";
}

<div class="card mt-3 mb-4">
    <div class="card-body border border-primary rounded">
        <h6 class="card-header bg-primary text-light mb-3">Fee Type Details</h6>
        <div class="row g-3">

            <div class="form-group col-md-4 col-lg-3">
                <strong class="text-muted">Name</strong>
                <div class="fs-6">@Model.Name</div>
            </div>

            <div class="form-group col-md-4 col-lg-3">
                <strong class="text-muted">Is Recurring</strong>
                <div class="fs-6">@Model.IsRecurring</div>
            </div>

            <div class="form-group col-md-4 col-lg-3">
                <strong class="text-muted">Frequency</strong>
                <div class="fs-6">@Model.Frequency</div>
            </div>

            <div class="form-group col-md-4 col-lg-3">
                <strong class="text-muted">Due Date</strong>
                <div class="fs-6">@Model.DueDate.ToString("dd-MM-yyyy")</div>
            </div>

            <div class="form-group col-md-4 col-lg-3">
                <strong class="text-muted">Is Optional</strong>
                <div class="fs-6">@Model.IsOptional</div>
            </div>

            <div class="form-group col-md-4 col-lg-3">
                <strong class="text-muted">Applicable From Month</strong>
                <div class="fs-6">@Model.ApplicableFromMonth</div>
            </div>

        </div>
    </div>
</div>

<div class="mt-3">
    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@Model?.FeeTypeId">Edit</a>
    <a class="btn btn-sm btn-secondary ms-2" asp-action="Index">Back to List</a>
</div>

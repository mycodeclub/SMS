@model IEnumerable<SchoolManagement.Models.Fee.FeeType>

@{
    ViewData["Title"] = "Fee Type Master";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "FeeTypes";

    string GetFrequencyLabel(int frequency)
    {
        return frequency switch
        {
            12 => "Annually (1 time)",
            3 => "Quarterly (every 3 months)",
            2 => "Half-Yearly (every 6 months)",
            1 => "Monthly",
            _ => $"Every {frequency} months"
        };
    }

    string GetOptionalLabel(bool isOptional)
    {
        return isOptional ? "Optional" : "Required";
    }
}

<!-- externals -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<!-- internal CSS -->
<style>
    .card {
        border-radius: .75rem;
    }

    .content, .container-fluid {
        padding: 1rem;
    }

    .top-controls {
        display: flex;
        align-items: center;
        padding: .5rem 0;
        margin-bottom: 1.5rem;
    }

    .add-feetype-wrapper {
        margin-left: auto;
    }

    .btn-sm {
        padding: .25rem .5rem;
        font-size: .75rem;
    }

    table#tblFeeTypeList tbody tr td {
        vertical-align: middle;
    }

    .dataTables_wrapper .dataTables_filter {
        margin-top: .75rem;
    }

        .dataTables_wrapper .dataTables_filter input {
            margin-bottom: .25rem;
        }

    @@media (max-width: 768px) {
        .top-controls

    {
        flex-direction: column;
        align-items: stretch;
        gap: .5rem;
    }

    .add-feetype-wrapper {
        margin-left: 0;
        text-align: right;
    }

    }

    /* Action icons spacing */
    .btn-group a, .btn-group button {
        font-size: 0.9rem;
    }

    /* Optional: center recurring label etc */
    th, td {
        white-space: nowrap;
    }
</style>

<div class="content my-3">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <div class="d-flex align-items-center">
                <h5 class="mb-0">Fee Type Master</h5>
            </div>
        </div>

        <div class="card-body">
            <!-- top control: add button on right -->
            <div class="top-controls">
                <div class="add-feetype-wrapper">
                    <a asp-action="Create" class="btn btn-sm btn-outline-primary">
                        <i class="fa fa-plus me-1"></i> Add Fee Type
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered align-middle" id="tblFeeTypeList" style="width:100%;">
                    <thead class="table-light">
                        <tr>
                            <th>Name</th>
                            <th>Recurring?</th>
                            <th>Frequency <i>(in year)</i></th>
                            <th>Due Date</th>
                            <th>Type</th>
                            <th class="text-center">Applicable From Month</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row-@item.FeeTypeId">
                                <td>@item.Name</td>
                                <td>@(item.IsRecurring ? "Yes" : "No")</td>
                                <td>@GetFrequencyLabel(item.Frequency)</td>
                                <td>@item.DueDate</td>
                                <td>@GetOptionalLabel(item.IsOptional)</td>
                                <td class="text-center">@item.ApplicableFromMonth</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Create" asp-route-id="@item.FeeTypeId" class="btn btn-sm" title="Edit">
                                            <i class="fa fa-edit text-primary"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.FeeTypeId" class="btn btn-sm" title="Details">
                                            <i class="fa fa-eye text-success"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm delete-feetype" data-id="@item.FeeTypeId" title="Delete">
                                            <i class="fa fa-trash text-danger"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border border-primary">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Fee Type?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        let deleteId = null;

        $(document).ready(function () {
            $('#tblFeeTypeList').DataTable({
                pageLength: 10,
                ordering: true,
                searching: true,
                order: [[0, "asc"]],
                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search fee types..."
                },
                columnDefs: [
                    { orderable: false, targets: -1 } // actions
                ]
            });

            $('#tblFeeTypeList').on('click', '.delete-feetype', function (e) {
                e.preventDefault();
                deleteId = $(this).data('id');
                $('#deleteModal').modal('show');
            });

            $('#confirmDeleteBtn').on('click', function () {
                if (!deleteId) return;
                $.ajax({
                    url: '/Admin/FeeTypes/Delete',
                    type: 'POST',
                    data: { id: deleteId },
                    success: function (result) {
                        if (result?.success) {
                            $('#deleteModal').modal('hide');
                            $('#row-' + deleteId).fadeOut(300, function () { $(this).remove(); });
                        } else {
                            alert('Delete failed: ' + (result?.error || 'Unknown error'));
                        }
                    },
                    error: function () {
                        alert('Delete failed due to server error.');
                    }
                });
            });
        });
    </script>
}

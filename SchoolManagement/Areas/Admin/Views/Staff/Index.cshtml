@model IEnumerable<SchoolManagement.Models.User.Staff>

@{
    ViewData["Title"] = "Staff List";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "Staff";
}

<!-- externals needed -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap4.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet" />

<!-- internal CSS -->
<style>
    .card {
        border-radius: .75rem;
    }

    .container-fluid, .content {
        padding-left: 1rem;
        padding-right: 1rem;
    }

    .card-header {
        padding: 0.75rem 1rem;
    }

    .card-body {
        padding: 1rem;
    }

    .table th, .table td {
        padding: 0.65rem 0.75rem; /* thoda aur breathing space */
        vertical-align: middle;
    }

    /* DataTable search box spacing */
    .dataTables_wrapper .dataTables_filter {
        margin-top: 0.75rem;
        margin-bottom: 0.5rem;
    }

    .btn-sm {
        padding: .25rem .5rem;
        font-size: .75rem;
    }

    /* Column alignment */
    #tblStaffList th:nth-child(6),
    #tblStaffList td:nth-child(6),
    #tblStaffList th:nth-child(7),
    #tblStaffList td:nth-child(7) {
        text-align: right;
    }
</style>

<div class="container-fluid my-3">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white d-flex align-items-center">
            <h6 class="mb-0"><i class="fa fa-users mr-2"></i> All Staff</h6>
            <div class="ml-auto">
                <a asp-action="CreateStaff" class="btn btn-sm btn-success">
                    <i class="fa fa-plus-circle mr-1"></i> Add Staff
                </a>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered" id="tblStaffList" style="width:100%;">
                    <thead class="thead-light">
                        <tr>
                            <th>Job Role</th>
                            <th>Full Name</th>
                            <th>Experience</th>
                            <th>Date Of Joining</th>
                            <th>Qualification</th>
                            <th>Contact</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row-@item.UniqueId">
                                <td>@item.JobRole</td>
                                <td>@item.FullName</td>
                                <td>@item.Experience</td>
                                <td>@item.DateOfJoin.ToString("dd-MM-yyyy")</td>
                                <td>@item.Qualification</td>
                                <td>@item.PrimaryPhoneNumber</td>
                                <td class="text-right">
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a asp-action="CreateStaff" asp-route-id="@item.UniqueId" class="btn btn-sm" title="Edit">
                                            <i class="fa fa-edit text-primary"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UniqueId" class="btn btn-sm" title="View">
                                            <i class="fa fa-eye text-success"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm delete-staff" data-id="@item.UniqueId" title="Delete">
                                            <i class="fa fa-trash text-danger"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content border border-primary">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this staff member?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap4.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#tblStaffList').DataTable({
                pageLength: 10,
                ordering: true,
                searching: true,
                order: [[1, "asc"]], // default sort Full Name
                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search staff..."
                },
                columnDefs: [
                    { orderable: false, targets: -1 } // disable ordering on Actions
                ]
            });

            let deleteId = null;
            $('#tblStaffList').on('click', '.delete-staff', function () {
                deleteId = $(this).data('id');
                $('#deleteModal').modal('show');
            });

            $('#confirmDeleteBtn').on('click', function () {
                if (!deleteId) return;
                $.ajax({
                    url: '/Admin/Staff/Delete',
                    type: 'POST',
                    data: { id: deleteId },
                    success: function (result) {
                        if (result?.success) {
                            $('#deleteModal').modal('hide');
                            $('#row-' + deleteId).fadeOut(500, function () { $(this).remove(); });
                        } else {
                            alert('Delete failed: ' + (result?.error || 'Unknown error'));
                        }
                    },
                    error: function () {
                        alert('Delete failed due to server error.');
                    }
                });
            });
        });
    </script>
}

@model IEnumerable<SchoolManagement.Models.User.Staff>

@{
    ViewData["Title"] = "Staff List";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
    ViewBag.ActiveTabName = "Staff";
}

<!-- externals needed -->
<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

<!-- internal CSS -->
<style>
    .card {
        border-radius: .75rem;
    }

    .container-fluid, .content {
        padding-left: 1rem;
        padding-right: 1rem;
    }

    /* Top controls: centered dropdown + right-aligned add staff */
    .top-controls {
        position: relative;
        padding: 0.5rem 0;
        margin-bottom: 1.5rem;
    }

    .center-filter {
        position: absolute;
        left: 50%;
        transform: translateX(-50%);
        width: 50%;
        max-width: 360px;
    }

    .new-staff-wrapper {
        position: absolute;
        right: 0;
        top: 50%;
        transform: translateY(-50%);
    }

    /* DataTable search separation */
    .dataTables_wrapper .dataTables_filter {
        margin-top: 0.75rem;
    }

        .dataTables_wrapper .dataTables_filter input {
            margin-bottom: 0.25rem;
        }

    @@media (max-width: 768px) {
        .center-filter

    {
        position: static;
        transform: none;
        width: 100%;
        margin-bottom: .75rem;
    }

    .new-staff-wrapper {
        position: static;
        transform: none;
        text-align: right;
        margin-top: .25rem;
    }

    }

    .btn-sm {
        padding: .25rem .5rem;
        font-size: .75rem;
    }

    table#tblStaffList tbody tr td {
        vertical-align: middle;
    }

    /* Column alignment */
    #tblStaffList th:nth-child(6),
    #tblStaffList td:nth-child(6),
    #tblStaffList th:nth-child(7),
    #tblStaffList td:nth-child(7) {
        text-align: right;
    }

    #tblStaffList th:nth-child(1),
    #tblStaffList td:nth-child(1),
    #tblStaffList th:nth-child(2),
    #tblStaffList td:nth-child(2) {
        text-align: left;
    }
</style>

<div class="content my-3">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-primary text-white rounded-top-4">
            <div class="d-flex align-items-center">
                <h5 class="mb-0">Staffs</h5>
            </div>
        </div>

        <div class="card-body">
            <!-- centered filter + add staff right -->
            <div class="top-controls">
              @*   <div class="center-filter">
                    <!-- Example filter: Job Role. Adjust asp-items as per availability -->
                    <select id="JobRoleFilter" class="form-select" onchange="ApplyFilter()">
                        <option value="">-- All Roles --</option>
                        <!-- Populate roles if you have them, e.g.: -->
                        <!-- <option value="Teacher">Teacher</option> -->
                        <!-- use server-side or ViewBag to fill dynamically if needed -->
                    </select>
                </div> *@
                <div class="new-staff-wrapper">
                    <a asp-action="CreateStaff" class="btn btn-sm btn-outline-primary">
                        <i class="fa fa-plus me-1"></i> Add New Staff
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-hover table-striped table-bordered align-middle" id="tblStaffList" style="width:100%;">
                    <thead class="table-light">
                        <tr>
                            <th>Job Role</th>
                            <th>Full Name</th>
                            <th>Experience</th>
                            <th>Date Of Joining</th>
                            <th>Highest Qualification</th>
                            <th>Contact Number</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr id="row-@item.UniqueId">
                                <td>@item.JobRole</td>
                                <td>@item.FullName</td>
                                <td>@item.Experience</td>
                                <td>@item.DateOfJoin.ToString("dd-MM-yyyy")</td>
                                <td>@item.Qualification</td>
                                <td>@item.PrimaryPhoneNumber</td>
                                <td class="text-end">
                                    <div class="btn-group" role="group" aria-label="Actions">
                                        <a asp-action="CreateStaff" asp-route-id="@item.UniqueId" class="btn btn-sm" title="Edit">
                                            <i class="fa fa-edit text-primary"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.UniqueId" class="btn btn-sm" title="View">
                                            <i class="fa fa-eye text-success"></i>
                                        </a>
                                        <button type="button" class="btn btn-sm delete-staff" data-id="@item.UniqueId" title="Delete">
                                            <i class="fa fa-trash text-danger"></i>
                                        </button>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border border-primary">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this Staff member?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">Yes, Delete</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        function ApplyFilter() {
            // Example: reload with query param for role filter
            const role = $('#JobRoleFilter').val() || '';
            const url = '/Admin/Staff/Index' + (role ? '?role=' + encodeURIComponent(role) : '');
            window.location.href = url;
        }

        $(document).ready(function () {
            $('#tblStaffList').DataTable({
                pageLength: 10,
                ordering: true,
                searching: true,
                order: [[1, "asc"]], // order by Full Name
                responsive: true,
                language: {
                    search: "_INPUT_",
                    searchPlaceholder: "Search staff..."
                },
                columnDefs: [
                    { orderable: false, targets: -1 } // actions not orderable
                ]
            });

            let deleteId = null;

            $('#tblStaffList').on('click', '.delete-staff', function () {
                deleteId = $(this).data('id');
                $('#deleteModal').modal('show');
            });

            $('#confirmDeleteBtn').on('click', function () {
                if (!deleteId) return;
                $.ajax({
                    url: '/Admin/Staff/Delete',
                    type: 'POST',
                    data: { id: deleteId },
                    success: function (result) {
                        if (result?.success) {
                            $('#deleteModal').modal('hide');
                            $('#row-' + deleteId).fadeOut(500, function () { $(this).remove(); });
                        } else {
                            alert('Delete failed: ' + (result?.error || 'Unknown error'));
                        }
                    },
                    error: function () {
                        alert('Delete failed due to server error.');
                    }
                });
            });
        });
    </script>
}

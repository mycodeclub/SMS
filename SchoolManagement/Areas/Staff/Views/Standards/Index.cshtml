@model IEnumerable<SchoolManagement.Models.Standard>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Standard";


}



<div class="content px-3">
    <div class="card shadow rounded-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0"><i class="fa-solid fa-layer-group me-2"></i>Standard List</h4>
            <a asp-action="Create" class="btn btn-light btn-sm shadow-sm">
                <i class="fa fa-plus me-1"></i> Add New Standard
            </a>
        </div>
        <div class="card-body">
            <table class="table table-hover table-striped border shadow-sm rounded" id="tblGuestLists">
                <thead class="table-light">
                    <tr>

                        <th>
                            @Html.DisplayNameFor(model => model.StandardName)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FeeAmountPerMonth)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.BillingCycle)
                        </th>
                        <th>Student Enrolled</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.StandardName</td>
                            <td>@item.FeeAmountPerMonth</td>
                            <td>@item.BillingCycle</td>
                            <td>
                                @(item.StandardName?.Count() ?? 0)

                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.UniqueId"><i class="fa fa-edit"></i></a> |
                                <a asp-action="Details" asp-route-id="@item.UniqueId"><i class="fa fa-eye"></i></a> |
                                <a asp-action="Delete" asp-route-id="@item.UniqueId"><i class="fa fa-trash"></i></a> |
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <!-- DataTable Scripts -->

    <link href="~/uitemplate/admintemp/dist/plugins/datatables/css/datatables.bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />


    <script src="~/admintemp/dist/plugins/datatables/jquery.datatables.min.js"></script>
    <script src="~/admintemp/dist/plugins/datatables/datatables.bootstrap.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#tblGuestLists').DataTable({
                "pageLength": 10,
                "ordering": true,
                "searching": true
            });
        });
    </script>
}

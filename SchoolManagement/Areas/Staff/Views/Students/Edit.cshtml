@model SchoolManagement.Models.User.Student

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Students";
}
<div class="content">
    <div class="card">
        <div class="card-body">
            <div class="content">
                <div class="card">
                    <div class="card-body" style="border:1px solid blue">
                        <h6 class="card-header bg-primary text-light mb-2">Edit Info</h6>
                        <hr />
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UniqueId" />

                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label asp-for="FirstName" class="control-label"></label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-4">
                                    <label asp-for="LastName" class="control-label"></label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-4">
                                    <label asp-for="DOB" class="control-label"></label>
                                    <input asp-for="DOB" class="form-control" />
                                    <span asp-validation-for="DOB" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label asp-for="Gender" class="control-label"></label>
                                    <input asp-for="Gender" class="form-control" />
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-4">
                                    <label asp-for="AdmitionDate" class="control-label"></label>
                                    <input asp-for="AdmitionDate" class="form-control" />
                                    <span asp-validation-for="AdmitionDate" class="text-danger"></span>
                                </div>

                                <div class="form-group col-md-4">
                                    <label asp-for="StandardId" class="control-label"></label>
                                    <select asp-for="StandardId" class="form-control" asp-items="ViewBag.StandardId"></select>
                                    <span asp-validation-for="StandardId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="row">
                                <div class="form-group col-md-4">
                                    <label asp-for="SessionYearId" class="control-label"></label>
                                    <select asp-for="SessionYearId" class="form-control" asp-items="ViewBag.SessionYearId"></select>
                                    <span asp-validation-for="SessionYearId" class="text-danger"></span>
                                </div>
                            </div>

                            <div class="form-group mt-3 text-center">
                                <input type="submit" value="Edit" class="btn btn-primary" />
                            </div>

                        </form>

                        @if (Model.ParentOrGuardians != null)
                        {
                            <div class="row">
                                <div class="col-12">
                                    <div class="card shadow-lg border-0 mb-4">
                                        <div class="card-header d-flex justify-content-between align-items-center bg-primary text-white">
                                            <h5 class="mb-0">Parents Details</h5>
                                            <a href="/Staff/Students/AddParents?studentId=@Model.UniqueId" class="btn btn-light text-primary fw-bold">
                                                ➕ Add Parent
                                            </a>
                                        </div>
                                        <div class="card-body p-4" style="border-top: 4px solid #0d6efd;">
                                            <div class="table-responsive">
                                                <table class="table table-hover table-bordered align-middle">
                                                    <thead class="table-primary text-center">
                                                        <tr>
                                                            <th>Relation</th>
                                                            <th>Name</th>
                                                            <th>DOB</th>
                                                            <th>Primary Phone Number</th>
                                                            <th>CTC</th>
                                                            <th>Occupation</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        @foreach (var p in Model.ParentOrGuardians)
                                                        {
                                                            <tr>
                                                                <td>@p.Relation.RelationName</td>
                                                                <td>@p.FullName</td>
                                                                <td>@p.DOB.ToShortDateString() <br /><small class="text-muted">Age: @p.Age</small></td>
                                                                <td>@p.PrimaryPhoneNumber</td>
                                                                <td>@p.CTC</td>
                                                                <td>@p.Occupation</td>
                                                            </tr>
                                                        }
                                                    </tbody>
                                                </table>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }

                      </div>

                  <div>
    <a asp-action="Index">Back to List</a>
</div>
</div>
</div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

                </div>
                
</div>
@model SchoolManagement.Models.User.Student
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Students";
}
<div class="content">

    <div class="row mb-4">
        <div class="col-12">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="mb-3" style="background-color:lightgrey">👩‍🎓Student Details</h2>
                    <table class="table table-bordered">
                        <tbody>
                            <tr><th>Full Name</th><td>@Html.DisplayFor(model => model.FullName)</td></tr>
                            <tr><th>Date of Birth</th><td>@Html.DisplayFor(model => model.DOB)</td></tr>
                            <tr><th>Gender</th><td>@Html.DisplayFor(model => model.Gender)</td></tr>
                            <tr><th>Admission Date</th><td>@Html.DisplayFor(model => model.AdmitionDate)</td></tr>
                            <tr><th>Standard</th><td>@Html.DisplayFor(model => model.Standard.UniqueId)</td></tr>
                            <tr><th>Session</th><td>@Html.DisplayFor(model => model.Session.UniqueId)</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <!-- Father Details -->
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="mb-3" style="background-color:lightgrey">👨‍👧 Father Details</h2>
                    <table class="table table-bordered">
                        <tbody>
                            <tr><th>Full Name</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[0].FullName)</td></tr>
                            <tr><th>Email</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[0].Email)</td></tr>
                            <tr><th>Contact</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[0].PrimaryPhoneNumber)</td></tr>
                            <tr><th>Date of Birth</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[0].DOB)</td></tr>
                            <tr><th>Occupation</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[0].Occupation)</td></tr>
                            <tr><th>CTC</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[0].CTC)</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Mother Details -->
        <div class="col-md-6 mb-3">
            <div class="card h-100">
                <div class="card-body">
                    <h2 class="mb-3" style="background-color:lightgrey">👩‍👧 Mother Details</h2>
                    <table class="table table-bordered">
                        <tbody>
                            <tr><th>Full Name</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[1].FullName)</td></tr>
                            <tr><th>Email</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[1].Email)</td></tr>
                            <tr><th>Contact</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[1].PrimaryPhoneNumber)</td></tr>
                            <tr><th>Occupation</th><td>@Html.DisplayFor(model => model.ParentOrGuardians[1].Occupation)</td></tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <!-- Buttons -->
    <div class="mt-4">
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.UniqueId">Edit</a>
        <a class="btn btn-secondary" asp-action="Index">Back to List</a>
    </div>

</div>

@model SchoolManagement.Models.User.Student

@{
    ViewData["Title"] = "Delete Student";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Students";
}
<div class="content">
    <div class="card shadow rounded-3 mt-4">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Delete Student</h4>
            <span class="badge bg-light text-primary">Warning: This action cannot be undone</span>
        </div>
        <div class="card-body">
            <h5 class="text-muted mb-4">Are you sure you want to delete the following student?</h5>
            <dl class="row">
                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.FullName)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FullName)</dd>

               
               
                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.DOB)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DOB)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.Gender)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Gender)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.AdmitionDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.AdmitionDate)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.Standard)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Standard.UniqueId)</dd>

                <dt class="col-sm-3 fw-semibold text-secondary">@Html.DisplayNameFor(model => model.Session)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Session.UniqueId)</dd>
            </dl>

            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="UniqueId" />
                <div class="d-flex gap-3">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left" style="color:lightgrey"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

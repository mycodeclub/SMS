@model SchoolManagement.Models.Fee.FeeTypeMaster

@{
    ViewData["Title"] = "Create Fee Type";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "FeeMaster";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow rounded-4">
                <div class="card-header bg-primary text-white rounded-top-4">
                    <h4 class="mb-0">Add New Fee Type</h4>
                </div>

                <div class="card-body p-4">
                    <form asp-action="Create" class="needs-validation" novalidate>
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-4">
                            <label asp-for="FeeType" class="form-label fw-semibold"></label>
                            <input asp-for="FeeType" class="form-control form-control-lg" />
                            <span asp-validation-for="FeeType" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Description" class="form-label fw-semibold"></label>
                            <textarea asp-for="Description" class="form-control form-control-lg" rows="4"></textarea>
                            <span asp-validation-for="Description" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-end gap-3">
                            <button type="submit" class="btn btn-success btn-lg px-4">Save</button>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-4">Cancel</a>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

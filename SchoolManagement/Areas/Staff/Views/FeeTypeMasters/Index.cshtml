@model IEnumerable<SchoolManagement.Models.Fee.FeeTypeMaster>

@{
    ViewData["Title"] = "Fee Type Master";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "FeeMaster";
}

<link href="~/uitemplate/admintemp/dist/plugins/datatables/css/datatables.bootstrap.min.css" rel="stylesheet" />

    <div class="content ">
        <div class="card shadow rounded-4">
            <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center rounded-top-4">
            <h4 class="mb-0">Fee Type</h4>
            <a asp-action="Create" class="btn btn-light btn-sm shadow-sm">  <i class="fa fa-plus me-1"></i> Add Fee Type</a>
            </div>
               <div class="card-body">
            <table class="table table-hover align-middle" id="tblGuestLists">
                <thead class="table-light">
                    <tr>
                        <th>Fee Type</th>
                        <th>Description</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FeeType)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td class="text-end">
                               
                                <a asp-action="Details" asp-route-id="@item.UniqueId"><i class="fa fa-eye"></i></a>
                        
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts {
    <!-- DataTable Scripts -->

    <link href="~/uitemplate/admintemp/dist/plugins/datatables/css/datatables.bootstrap.min.css" rel="stylesheet" />
    <script src="~/admintemp/dist/plugins/datatables/jquery.datatables.min.js"></script>
    <script src="~/admintemp/dist/plugins/datatables/datatables.bootstrap.min.js"></script>
    <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />

    <script>
        $(document).ready(function () {
            $('#tblGuestLists').DataTable({
                "pageLength": 10,
                "ordering": true,
                "searching": true
            });
        });
    </script>
}


@model SchoolManagement.Models.Fee.SessionFeeMaster

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}

<h3>Are you sure you want to delete this fee record?</h3>

<div class="card shadow border-1">
    <div class="card-header bg-danger text-white">
        <h4 class="mb-0">Session Fee Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-4">Session</dt>
            <dd class="col-sm-8">@Model.SessionId</dd>
            <dt class="col-sm-4">Standard</dt>
            <dd class="col-sm-8">@Model.StandardId</dd>
            <!-- Add other fields you want to display -->
        </dl>

        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="UniqueId" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
        </form>
    </div>
</div>

@model IEnumerable<SchoolManagement.Models.AttendanceViewModel>
@{
    ViewData["Title"] = "Mark Attendance";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.ActiveTabName = "Attendance";
}

<!-- FontAwesome 5 -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<div class="container mt-2">
    <div class="card shadow-lg border-3">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">
                <i class="fa fa-check-square"></i> Attendance Management System
            </h3>
        </div>

        <div class="card-body">

            <!-- Header Info -->
            <div class="card mb-4 border-3">
                <div class="card-body row align-items-center">
                    <div class="col-md-3">
                        <label class="font-weight-bold">Class</label>
                        <input type="text" class="form-control border" value="@ViewBag.StandardName" readonly />
                    </div>
                    <div class="col-md-3">
                        <label class="font-weight-bold">Subject</label>
                        <input type="text" class="form-control border" value="@ViewBag.SubjectName" readonly />
                    </div>
                    <div class="col-md-6">
                        <label class="font-weight-bold">Date</label>
                        <form method="get" asp-action="Mark" class="form-inline">
                            <input type="hidden" name="standardId" value="@Context.Request.Query["standardId"]" />
                            <input type="hidden" name="subjectId" value="@Context.Request.Query["subjectId"]" />
                            <input type="date" class="form-control mr-2 mb-2 border" name="date"
                                   value="@(((DateTime)ViewBag.Date).ToString("yyyy-MM-dd"))"
                                   onchange="this.form.submit()" />
                            <button type="button" class="btn btn-primary mb-2" data-toggle="modal" data-target="#reportModal">
                                <i class="fas fa-clipboard-list"></i> Check Report
                            </button>
                        </form>
                    </div>
                </div>
            </div>

            <!-- Success Message -->
            @if (TempData["Success"] != null)
            {
                <div class="alert alert-success text-center shadow-sm border rounded">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                </div>
            }

            <!-- Attendance Table -->
            @if (ViewBag.ShowMarkTable == true)
            {
                <div class="card border">
                    <div class="card-body">
                        <form method="post" asp-action="Mark">
                            <input type="hidden" name="subjectId" value="@Context.Request.Query["subjectId"]" />
                            <input type="hidden" name="standardId" value="@Context.Request.Query["standardId"]" />
                            <input type="hidden" name="date" value="@(((DateTime)ViewBag.Date).ToString("yyyy-MM-dd"))" />

                            <div class="table table-responsive">
                                <table class="table table-bordered table-hover text-center">
                                    <thead class="thead-light">
                                        <tr>
                                            <th>Sr. No</th>
                                            <th>Name</th>
                                            <th>Class</th>
                                            <th>Subject</th>
                                            <th>Date</th>
                                            <th>Attendance</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Any())
                                        {
                                            var sr = 1;
                                            foreach (var student in Model)
                                            {
                                                <tr class="@(student.AlreadyMarked ? "table-light" : "")">
                                                    <td>@sr</td>
                                                    <td>@student.FullName</td>
                                                    <td>@student.StandardName</td>
                                                    <td>@student.SubjectName</td>
                                                    <td>@student.Date.ToString("dd-MMM-yyyy")</td>
                                                    <td>
                                                        @if (student.AlreadyMarked)
                                                        {
                                                            <span class="badge badge-success">✅ Marked</span>
                                                        }
                                                        else
                                                        {
                                                            <div class="form-check form-check-inline">
                                                                <input class="form-check-input" type="radio" name="attendanceData[@student.StudentId]" value="true" required>
                                                                <label class="form-check-label text-success">P</label>
                                                            </div>
                                                            <div class="form-check form-check-inline">
                                                                <input class="form-check-input" type="radio" name="attendanceData[@student.StudentId]" value="false" required>
                                                                <label class="form-check-label text-danger">A</label>
                                                            </div>
                                                        }
                                                    </td>
                                                </tr>
                                                sr++;
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="6" class="text-muted text-center">
                                                    <i class="fas fa-info-circle"></i> No students found.
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>

                            <div class="text-center mt-3">
                                <button type="submit" class="btn btn-primary shadow-sm text-center">
                                    <i class="fas fa-save"></i> Save Attendance
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

<!-- Report Modal -->
<div class="modal fade" id="reportModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-scrollable" role="document">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">
                    Attendance Report - @ViewBag.StandardName / @ViewBag.SubjectName
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                @if (ViewBag.ReportData != null)
                {
                    var groupedByDate = ((List<SchoolManagement.Models.AttendanceViewModel>)ViewBag.ReportData)
                    .GroupBy(a => a.Date.Date)
                    .OrderByDescending(g => g.Key);

                    foreach (var dayGroup in groupedByDate)
                    {
                        <div class="card mb-2 shadow-sm">
                            <div class="card-header bg-info text-white font-weight-bold">
                                @dayGroup.Key.ToString("dd-MMM-yyyy")
                            </div>
                            <div class="card-body p-0">
                                <div class="row justify-content-center no-gutters">
                                    <div class="col-md-0">
                                        @foreach (var student in dayGroup)
                                        {
                                            <div class="d-flex justify-content-between align-items-center p-2 border-bottom student-row">
                                                <div class="font-weight-bold">@student.FullName</div>
                                                <div>
                                                    @if (student.AlreadyMarked)
                                                    {
                                                        <span class="badge @(student.IsPresent ? "badge-success" : "badge-danger")">
                                                            @(student.IsPresent ? "Present" : "Absent")
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-secondary">Not Marked</span>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <p class="text-muted text-center">No attendance records found.</p>
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

